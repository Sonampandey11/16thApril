<web-app>
  <display-name>SimpleServletProject</display-name>
   <servlet>
		<servlet-name>ServletDemo</servlet-name>
		<servlet-class>com.cg.controller.ServletDemo</servlet-class>
	</servlet>
	<servlet-mapping>
